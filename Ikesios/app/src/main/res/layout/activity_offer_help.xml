<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfferHelp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="328dp"
        android:layout_height="74dp"
        android:text="Τι βοήθεια θα μπορούσατε να δώσετε;"
        android:textSize="25sp"
        android:textColor="@color/primaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="361dp"
        android:layout_height="24dp"
        android:layout_marginVertical="5dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Βοήθεια με τα ψώνια (φαρμακείο, supermarket, κλπ)"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.08" />

    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Βοήθεια στο σπίτι (καθαρισμός, τακτοποίηση, μεταφορές επίπλων)"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox1"
        app:layout_constraintVertical_bias="0.027" />

    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Βοήθεια σε κάτι τεχνολογικό (internet, υπολογιστής, κάμερα)"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox2"
        app:layout_constraintVertical_bias="0.023" />

    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Κάποιον να μιλήσω, τηλεφωνικά ή μέσω internet"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox3"
        app:layout_constraintVertical_bias="0.021" />

    <CheckBox
        android:id="@+id/checkbox5"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Ιατρική βοήθεια"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox4"
        app:layout_constraintVertical_bias="0.021" />

    <CheckBox
        android:id="@+id/checkbox6"
        android:layout_width="361dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:buttonTint="@color/colorPrimary"
        android:onClick="onCheckboxClicked"
        android:text="Άλλο"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox5"
        app:layout_constraintVertical_bias="0.025" />


    <Button
        android:id="@+id/offer_help"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="228dp"
        android:layout_height="83dp"
        android:layout_marginBottom="120dp"
        android:text="υποβολη"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ask_help"
        app:layout_constraintVertical_bias="0.19999999"
        app:rippleColor="@color/primaryDark"
        app:strokeColor="@color/colorPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>