<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Covid_Other">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:text="Ποιον αφορά η δήλωση;"
        android:textColor="@color/primaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <RadioGroup

        android:id="@+id/groupradio"
        android:layout_width="267dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radia_id1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Κάποιον άλλο που διαμένει μαζί μου "
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/radia_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Κάποιον άλλο που δεν διαμένει μαζί μου αλλά τον φροντίζω"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

    </RadioGroup>


    <TextView
        android:id="@+id/relation"
        android:layout_width="251dp"
        android:layout_height="49dp"
        android:text="Προσδιορίστε την σχέση σας:"
        android:textColor="@color/primaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupradio"
        app:layout_constraintVertical_bias="0.065" />

    <RadioGroup

        android:id="@+id/groupradio2"
        android:layout_width="267dp"
        android:layout_height="94dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relation"
        app:layout_constraintVertical_bias="0.0">

        <RadioButton
            android:id="@+id/radia_id3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Γονέας"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/radia_id4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Τέκνο"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

        <RadioButton
            android:id="@+id/radia_id5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Άλλο"
            android:textSize="15sp"
            android:theme="@style/RadioButton" />

    </RadioGroup>


    <Button
        android:id="@+id/next_step"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="228dp"
        android:layout_height="83dp"
        android:text="συνεχεια"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupradio2"
        app:layout_constraintVertical_bias="0.459"
        app:rippleColor="@color/primaryDark"
        app:strokeColor="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>